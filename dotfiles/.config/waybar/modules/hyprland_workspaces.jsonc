{
  "hyprland/workspaces": {
    "on-click": "activate",
    "on-scroll-up": "hyprctl dispatch workspace r-1",
    "on-scroll-down": "hyprctl dispatch workspace r+1",
    "active-only": false,
    "all-outputs": true,
    "format": "{icon}",
    "format-icons": {
      "default": "⦁",
      "active": "  ",
      "urgent": "  ",
    },
    "persistent-workspaces": {
      "*": 5,
    },
  },
}
